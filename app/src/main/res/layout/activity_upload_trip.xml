<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/beautysapa"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        >
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_picture"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            android:id="@+id/img_btnaddimg"/>
        <TextView
            android:id="@+id/tv_addname"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="25sp"
            android:textColor="@color/whitecolor"
            android:text="Add the pictures"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="10dp"
            app:cardElevation="2dp"
            app:cardPreventCornerOverlap="false"
            app:contentPadding="0dp"
            android:layout_marginTop="25sp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/card_adventure"
            >
            <LinearLayout
                android:background="@drawable/background_addtour"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <LinearLayout
                    android:layout_margin="1dp"
                    android:background=""
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <RelativeLayout
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_centerVertical="true"
                        >
                        <ImageView
                            android:id="@+id/img_btnaddad"
                            android:layout_width="78dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center_vertical"
                            android:layout_centerInParent="true"
                            android:src="@drawable/ic_landscape" />
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="@string/adventure"
                            android:textColor="@color/whitecolor"
                            android:padding="15dp"
                            android:textSize="25sp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="10dp"
            app:cardElevation="2dp"
            app:cardPreventCornerOverlap="false"
            app:contentPadding="0dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/card_leisure"
            android:layout_marginTop="10dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <LinearLayout
                    android:layout_margin="1dp"
                    android:background="@drawable/background_addtour1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <RelativeLayout
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_centerVertical="true"
                        >
                        <ImageView
                            android:id="@+id/img_btnadle"
                            android:layout_width="78dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center_vertical"
                            android:layout_centerInParent="true"
                            android:src="@drawable/ic_golf" />
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="@string/leisure"
                            android:textColor="@color/whitecolor"
                            android:padding="15dp"
                            android:textSize="25sp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="10dp"
            app:cardElevation="2dp"
            app:cardPreventCornerOverlap="false"
            app:contentPadding="0dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/card_food"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_addtour2"
                >
                <LinearLayout
                    android:layout_margin="1dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <RelativeLayout
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_centerVertical="true"
                        >
                        <ImageView
                            android:id="@+id/img_btnaddfod"
                            android:layout_width="78dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center_vertical"
                            android:layout_centerInParent="true"
                            android:src="@drawable/ic_food" />
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="@string/foodsafari"
                            android:textColor="@color/whitecolor"
                            android:padding="15dp"
                            android:textSize="25sp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/tv_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Want to go back ? Click here"
            android:textSize="20sp"
            android:gravity="center_horizontal"/>

    </LinearLayout>
</LinearLayout>